<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/style_player_gradient_background"
    tools:context=".Activity.PlayerActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarPlayerActivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/themeColor"
        app:title="Media Player"
        app:navigationIconTint="@color/white"
        app:titleTextColor="@color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/musicImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/music_logo"
            app:shapeAppearanceOverlay="@style/SoftCorner"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/songTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/title"
            android:textColor="@color/controlColor"
            android:gravity="center"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/controlColor"
            android:textSize="13sp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:thumbTint="@color/controlColor"
            android:progressTint="@color/white"
            android:layout_marginHorizontal="-5dp"/>

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/controlColor"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="30dp">

        <!--repeatButton Button-->
        <ImageButton
            android:id="@+id/repeatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/player_repeat_icon"
            android:contentDescription="@string/todo" />

        <!--fastRewind Button-->
        <ImageButton
            android:id="@+id/fastRewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:backgroundTint="@android:color/transparent"
            android:src="@drawable/player_fast_rewind_icon"
            android:contentDescription="@string/todo" />

        <!--playPause Button-->
        <ImageButton
            android:id="@+id/playPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/player_play_icon"
            app:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/todo" />

        <!--fastForward Button-->
        <ImageButton
            android:id="@+id/fastForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:backgroundTint="@android:color/transparent"
            android:src="@drawable/player_fast_forward_icon"
            android:contentDescription="@string/todo" />

        <!--musicList Button-->
        <ImageButton
            android:id="@+id/shuffleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:backgroundTint="@android:color/transparent"
            android:src="@drawable/player_shuffle_icon"
            android:contentDescription="@string/todo" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="40dp">

        <!--Favorite Button-->
        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/player_favorite_empty_icon"
            android:contentDescription="@string/todo" />

        <!--Equalizer Button-->
        <ImageButton
            android:id="@+id/equalizerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:backgroundTint="@android:color/transparent"
            android:src="@drawable/player_equalizer_icon"
            android:contentDescription="@string/todo" />

        <!--Timer Button-->
        <ImageButton
            android:id="@+id/timerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/player_timer_icon"
            app:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/todo" />

        <!--Share Button-->
        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:backgroundTint="@android:color/transparent"
            android:src="@drawable/player_share_icon"
            android:contentDescription="@string/todo" />

        <!--Share Button-->
        <ImageButton
            android:id="@+id/playerList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:backgroundTint="@android:color/transparent"
            android:src="@drawable/player_list_bullets_icon"
            android:contentDescription="@string/todo" />


    </LinearLayout>


    <com.gauravk.audiovisualizer.visualizer.BarVisualizer
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="-50dp"
        custom:avDensity="0.8"
        custom:avType="fill"
        custom:avColor="@color/white"
        custom:avSpeed="normal"/>


</LinearLayout>